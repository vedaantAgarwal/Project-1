print("Thank you for choosing Python Pizza Deliveries!")
print("Size of pizza")
size = input() # What size pizza do you want? S, M, or L
print("Do you want extra pepperoni?")
add_pepperoni = input() # Do you want pepperoni? Y or N
print("Dou you want extra cheese?")
extra_cheese = input() # Do you want extra cheese? Y or N
price=0
if size=="S":
  price+=15
  if add_pepperoni=="Y":
    price+=2
  if extra_cheese=="Y":
    price+=1;
elif size=="M":
  price+=20
  if add_pepperoni=="Y":
    price+=3
  if extra_cheese=="Y":
    price+=1;
else:
  price+=25
  if add_pepperoni=="Y":
    price+=3
  if extra_cheese=="Y":
    price+=1;
print(f"Your final bill is: ${price}.")